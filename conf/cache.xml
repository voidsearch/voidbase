<?xml version="1.0" encoding="UTF-8" ?>
<config>

    <!-- global cache handlers configuration -->
    <cache>
        <default_handler>store</default_handler>

        <handlers>
            <store>com.voidsearch.voidbase.apps.cache.module.MessagePersistenceStore</store>
        </handlers>
    </cache>

    <!-- individual handlers configuration -->
    <MessagePersistenceStore>
        <storage>/data/messages</storage>
        
        <operations>
            <GET lock="none"/>
            <PUT lock="atomic"/>
            <DELETE lock="atomic"/>
            <FLUSH lock="global"/>
        </operations>
    </MessagePersistenceStore>
</config>