    <!-- storage-specific configurations -->

    <storage>

        <JobPriorityQueue>
            <!-- millisecond cleanup poll interval -->
            <cleanupInterval>1000</cleanupInterval>
        </JobPriorityQueue>

    </storage>

</config>    